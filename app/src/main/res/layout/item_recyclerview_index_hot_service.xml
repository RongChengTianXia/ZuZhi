<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/margin_edit_follow_items"
        android:paddingRight="@dimen/margin_edit_follow_items"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/iv_item_hot_service_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/temp_icon1"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_item_hot_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_edit_follow_items"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_item_hot_service_icon"
            android:text="创业必备：法律文书6件套——官方律师团亲自打造"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/font_15" />

        <TextView
            android:id="@+id/tv_item_hot_service_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_hot_service_title"
            android:layout_below="@+id/tv_item_hot_service_title"
            android:layout_marginTop="10dp"
            android:text="由专家提供服务"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/font_13" />

        <TextView
            android:id="@+id/tv_item_hot_service_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_item_hot_service_info1"
            android:layout_marginLeft="@dimen/margin_edit_follow_items"
            android:layout_toRightOf="@+id/tv_item_hot_service_info1"
            android:text="9年经验"
            android:textColor="@color/color_bg_button_main_normal"
            android:textSize="@dimen/font_13" />

        <TextView
            android:id="@+id/tv_item_hot_service_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_hot_service_title"
            android:layout_alignParentBottom="true"
            android:text="￥1000.0"
            android:textColor="@color/color_text_price_normal"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/tv_item_hot_service_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_edit_follow_items"
            android:layout_toRightOf="@+id/tv_item_hot_service_price1"
            android:text="￥5200.0"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/tv_item_hot_service_attribute"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_item_hot_service_price2"
            android:background="@drawable/bg_round"
            android:gravity="center"
            android:text="@string/limited"
            android:textColor="@color/color_white"
            android:textSize="10dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_separation_line"
        android:layout_alignParentBottom="true"
        android:background="@color/color_separation_line" />
</LinearLayout>

