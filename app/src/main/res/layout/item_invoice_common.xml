<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white">
    <TextView
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="发票抬头"
        android:background="@color/color_white"
        android:textColor="@color/color_normal_text"
        android:textSize="14sp"
        android:gravity="center_vertical"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/itemInvoiceCommonFirmName"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:theme="@null"
        android:textColor="@color/color_bg_title_bar"
        android:textSize="14sp"
        android:hint="公司名称"
        android:paddingLeft="5dp"
        android:background="@drawable/invoice_common_frim_name"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_separation_line" />

    <TextView
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="收件人信息"
        android:textSize="14sp"
        android:textColor="@color/color_normal_text"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <!-- 收件人 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/color_white">
        <TextView
            android:id="@+id/itemInvoiceCommonTextViewAddressee"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="收件人"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceCommonAddressee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:background="@null"/>
    </LinearLayout>

    <!-- 手机号 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceCommonTextViewPhoneNumber"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="手机号"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceCommonPhoneNumber"
            android:layout_width="match_parent"
            android:numeric="integer"
            android:layout_height="match_parent"
            android:textColor="@color/color_bg_title_bar"
            android:textSize="14sp"
            android:theme="@null"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 邮政编码 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceCommonTextViewZIPCode"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="邮政编码"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceCommonZIPCode"
            android:layout_width="match_parent"
            android:textColor="@color/color_bg_title_bar"
            android:layout_height="match_parent"
            android:theme="@null"
            android:numeric="integer"
            android:textSize="14sp"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 所在地区 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceCommonTextViewLocation"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="所在地区"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceCommonLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_bg_title_bar"
            android:textSize="14sp"
            android:theme="@null"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 街道 -->
    <View
        android:background="@color/color_separation_line"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceCommonTextViewStreet"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="街道"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceCommonStreet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:theme="@null"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 详细地址 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceCommonTextViewDetailedAddress"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="详细地址"
            android:paddingLeft="10dp"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceCommonDetailedAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:theme="@null"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_separation_line" />

    <!-- 发票内容 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="发票内容"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/color_normal_text"
        android:background="@color/color_white"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <!-- 明细 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="明细"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/color_white"
        android:textColor="@color/color_normal_text"
        android:textSize="14sp" />
</LinearLayout>