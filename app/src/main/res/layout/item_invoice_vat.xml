<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="公司信息"
        android:textColor="@color/color_normal_text"
        android:background="@color/color_white"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>

    <!-- 单位名称 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewCompanyName"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_identifying_code_disable"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/itemInvoiceVATCompanyName"
            android:layout_width="match_parent"
            android:theme="@null"
            android:textSize="14sp"
            android:background="@null"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- 纳税人识别码 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewTaxpayerID"
            android:layout_width="125dp"
            android:textColor="@color/color_text_identifying_code_disable"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/itemInvoiceVATTaxpayerID"
            android:layout_width="match_parent"
            android:theme="@null"
            android:background="@null"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:layout_height="match_parent" />
    </LinearLayout>


    <!-- 注册地址 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewRegisterAddress"
            android:layout_width="125dp"
            android:textColor="@color/color_text_identifying_code_disable"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/itemInvoiceVATRegisterAddress"
            android:layout_width="match_parent"
            android:theme="@null"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/color_bg_title_bar"
            android:layout_height="match_parent" />
    </LinearLayout>


    <!-- 注册电话 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewRegisterPhone"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_identifying_code_disable"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/itemInvoiceVATRegisterPhone"
            android:layout_width="match_parent"
            android:theme="@null"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>


    <!-- 开户银行 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewDepositBank"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_identifying_code_disable"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/itemInvoiceVATDepositBank"
            android:layout_width="match_parent"
            android:theme="@null"
            android:textSize="14sp"
            android:background="@null"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>


    <!-- 银行账号 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewBankAccount"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:textColor="@color/color_text_identifying_code_disable"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/itemInvoiceVATBankAccount"
            android:layout_width="match_parent"
            android:theme="@null"
            android:background="@null"
            android:numeric="integer"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_separation_line" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="收件人信息"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/color_normal_text"
        android:background="@color/color_white"
        android:layout_marginTop="10dp"/>

    <!-- 收件人 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewAddressee"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="收件人"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceVATAddressee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/color_bg_title_bar"
            android:theme="@null"
            android:textSize="14sp"
            android:background="@null"/>
    </LinearLayout>

    <!-- 手机号 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewPhoneNumber"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="手机号"
            android:numeric="integer"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceVATPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@null"
            android:numeric="integer"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 邮政编码 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewZIPCode"
            android:layout_width="90dp"
            android:textSize="@dimen/font_13"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:numeric="integer"
            android:text="邮政编码"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceVATZIPCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@null"
            android:background="@null"
            android:numeric="integer"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 所在地区 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewLocation"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="所在地区"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceVATLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@null"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 街道 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewStreet"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="街道"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceVATStreet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@null"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/color_bg_title_bar"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 详细地址 -->
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/itemInvoiceVATTextViewDetailedAddress"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="详细地址"
            android:textColor="@color/color_text_identifying_code_disable"/>
        <EditText
            android:id="@+id/itemInvoiceVATDetailedAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/color_bg_title_bar"
            android:theme="@null"
            android:textSize="14sp"
            android:background="@null"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- 发票内容 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="发票内容"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:background="@color/color_white"
        android:textColor="@color/color_normal_text"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_separation_line"
        android:layout_height="1px" />
    <!-- 明细 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="明细"
        android:textColor="@color/color_normal_text"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="14sp" />
</LinearLayout>