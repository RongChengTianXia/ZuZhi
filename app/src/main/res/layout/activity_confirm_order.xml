<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_identifying_code_disable"
    android:orientation="vertical"
    tools:context="com.zuzhi.tianyou.activity.CommodityInfoActivity">

    <include
        android:id="@+id/titleBar"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_identifying_code_disable"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_tab_layout"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_main"
                android:text="永大会计事务所"
                android:textColor="@color/color_normal_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:background="@color/color_separation_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/margin_edit_follow_items"
                android:paddingRight="@dimen/margin_edit_follow_items"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_confirm_order_order_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/temp_icon1" />

                <TextView
                    android:id="@+id/tv_confirm_order_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_edit_follow_items"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_confirm_order_order_icon"
                    android:text="创业必备：法律文书6件套——官方律师团亲自打造"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/tv_confirm_order_order_info1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_confirm_order_order_title"
                    android:layout_below="@+id/tv_confirm_order_order_title"
                    android:layout_marginTop="10dp"
                    android:text="由专家提供服务"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/tv_confirm_order_order_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_confirm_order_order_info1"
                    android:layout_marginLeft="@dimen/margin_edit_follow_items"
                    android:layout_toRightOf="@+id/tv_confirm_order_order_info1"
                    android:text="9年经验"
                    android:textColor="@color/color_bg_button_main_normal"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:id="@+id/tv_confirm_order_order_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_confirm_order_order_title"
                    android:layout_alignParentBottom="true"
                    android:text="￥1000.0"
                    android:textColor="@color/color_text_price_normal"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/tv_confirm_order_order_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_edit_follow_items"
                    android:layout_toRightOf="@+id/tv_confirm_order_order_price1"
                    android:text="￥5200.0"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tv_confirm_order_order_attribute"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_confirm_order_order_price2"
                    android:background="@drawable/bg_round"
                    android:gravity="center"
                    android:text="@string/limited"
                    android:textColor="@color/color_white"
                    android:textSize="10dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:background="@color/color_separation_line" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                android:id="@+id/makeInvoice"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_main"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/font_14"
                android:text="去开发票"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/my_click_grey"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="12dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:background="@color/color_separation_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_main">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/login_icon_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="满1000元减100元"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:background="@color/color_separation_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_main">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/login_icon_check" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="满1000赠送报表审核一次"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:background="@color/color_separation_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:padding="10dp"
                android:text="@string/levae_message_to_service"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/font_14" />

            <EditText
                android:textCursorDrawable="@null"
                android:id="@+id/et_confirm_order_message"
                android:layout_width="match_parent"
                android:layout_height="226dp"
                android:background="@color/color_white"
                android:gravity="start"
                android:hint="可填写与服务商达成一致的要求"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_normal_text"
                android:textColorHint="@color/color_text_hint_default_search"
                android:textSize="@dimen/font_14" />
        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_commodity_info_single"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_confirm_order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="合计￥9000"
                android:textColor="@color/color_text_price_normal"
                android:textSize="@dimen/font_17" />

            <TextView
                android:id="@+id/tv_confirm_order_favorable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_confirm_order_total"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_confirm_order_total"
                android:text="优惠￥1000"
                android:textColor="@color/color_text_hint"
                android:textSize="@dimen/font_12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_confirm_order_commit_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/color_text_price_normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="@string/commit_order"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

</LinearLayout>

